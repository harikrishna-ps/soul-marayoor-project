---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mud House Resort - Eco-friendly Luxury">
  <main>
    <!-- Hero Section -->
    <section class="relative h-screen">
      <div class="absolute inset-0">
        <img 
          src="https://images.unsplash.com/photo-1532339142463-fd0a8979791a?auto=format&fit=crop&q=80"
          alt="Mud house exterior"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>
      </div>
      <div class="relative h-full flex items-center justify-center text-center text-white px-4">
        <div>
          <h1 class="font-['Playfair_Display'] text-5xl md:text-7xl mb-6">Welcome to Serenity</h1>
          <p class="text-xl md:text-2xl mb-8">Experience sustainable luxury in our eco-friendly mud houses</p>
          <a href="#contact" class="bg-earth hover:bg-earth-dark text-white px-8 py-3 rounded-full text-lg transition-colors">
            Book Your Stay
          </a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-earth-light/10">
      <div class="container mx-auto px-4">
        <h2 class="font-['Playfair_Display'] text-4xl text-center mb-12">Our Story</h2>
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <p class="text-lg leading-relaxed mb-6">
              Nestled in the heart of nature, our mud houses offer a unique blend of traditional architecture 
              and modern comfort. Built using sustainable materials and ancient techniques, each house is 
              a testament to eco-friendly living.
            </p>
            <p class="text-lg leading-relaxed">
              Experience the natural temperature regulation of mud walls, breathe in the fresh air, and 
              connect with nature while enjoying modern amenities. Our resort is designed to provide 
              a peaceful retreat from the busy world.
            </p>
          </div>
          <img 
            src="https://images.unsplash.com/photo-1604014137567-c231643d1956?auto=format&fit=crop&q=80"
            alt="Interior of mud house"
            class="rounded-lg shadow-xl"
          />
        </div>
      </div>
    </section>

    <!-- Accommodations Section -->
    <section id="accommodations" class="py-20">
      <div class="container mx-auto px-4">
        <h2 class="font-['Playfair_Display'] text-4xl text-center mb-12">Our Accommodations</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1518780664697-55e3ad937233?auto=format&fit=crop&q=80"
              alt="Deluxe Mud House"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="font-['Playfair_Display'] text-2xl mb-4">Deluxe Mud House</h3>
              <p class="text-gray-600 mb-4">Perfect for couples seeking a romantic getaway in nature.</p>
              <ul class="text-gray-600">
                <li>✓ King-size bed</li>
                <li>✓ Private bathroom</li>
                <li>✓ Garden view</li>
              </ul>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1595877244574-e90ce41ce089?auto=format&fit=crop&q=80"
              alt="Family Mud House"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="font-['Playfair_Display'] text-2xl mb-4">Family Mud House</h3>
              <p class="text-gray-600 mb-4">Spacious accommodation for the whole family.</p>
              <ul class="text-gray-600">
                <li>✓ Two bedrooms</li>
                <li>✓ Living area</li>
                <li>✓ Private terrace</li>
              </ul>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1604014237800-1c9102c219da?auto=format&fit=crop&q=80"
              alt="Luxury Suite"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="font-['Playfair_Display'] text-2xl mb-4">Luxury Suite</h3>
              <p class="text-gray-600 mb-4">Our most exclusive accommodation with premium amenities.</p>
              <ul class="text-gray-600">
                <li>✓ Panoramic views</li>
                <li>✓ Private pool</li>
                <li>✓ Outdoor dining area</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-earth-light/10">
      <div class="container mx-auto px-4">
        <h2 class="font-['Playfair_Display'] text-4xl text-center mb-12">Contact Us</h2>
        <div class="max-w-2xl mx-auto">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-gray-700 mb-2">Name</label>
              <input
                type="text"
                id="name"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-earth focus:border-earth"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-gray-700 mb-2">Email</label>
              <input
                type="email"
                id="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-earth focus:border-earth"
                required
              />
            </div>
            <div>
              <label for="message" class="block text-gray-700 mb-2">Message</label>
              <textarea
                id="message"
                rows="4"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-earth focus:border-earth"
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-earth hover:bg-earth-dark text-white px-6 py-3 rounded-lg transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>
</Layout>